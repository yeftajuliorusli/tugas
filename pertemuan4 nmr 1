#include <iostream>
using namespace std;

int main ()
{
  int nilaiI, nilaiII, nilaiIII, rata;
  string nama, hadiah;

  cout << "Nama Siswa : ";
  cin >> nama;

  cout << "Nilai Pertandingan I : ";
  cin >> nilaiI;
  cout << "Nilai Pertandingan II : ";
  cin >> nilaiII;
  cout << "Nilai Pertandingan III : ";
  cin >> nilaiIII;
  rata = (nilaiI + nilaiII + nilaiIII)/3;
  cout << endl;
  cout << "Siswa yang bernama " << nama << endl;
  cout << "Memperoleh nilai rata-rata " << rata;
  cout << " dari hasil perlombaan yang diikutinya" << endl;

  if (rata >= 85){
    cout << "Mendapat hadiah Komputer Core i5";
  } else if (rata >= 70){
    cout << "Mendapat hadiah Uang sebesar Rp. 2.500.000";
  } else if (rata < 70){
    cout << "Mendapat hadiah  Hiburan";
  }
  }
